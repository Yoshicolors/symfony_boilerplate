{% extends 'base.html.twig' %}

{% block title %}Détails du burger - CRUDcroustillant{% endblock %}

{% block stylesheets %}
<style>
:root{
  --bg:#ffffff;
  --card:#fbfbfc;
  --primary:#0f1724;
  --accent:#e86b1f;
  --muted:#6b7280;
  --border:#eceff3;
}
.burger-detail-wrap {
  padding:80px 20px 60px;
  max-width:800px;
  margin:0 auto;
}
.detail-card {
  background:var(--card);
  border-radius:12px;
  box-shadow:0 8px 24px rgba(15,23,36,0.06);
  padding:28px;
  text-align:center;
}
.detail-card img {
  max-width:100%;
  height:auto;
  border-radius:12px;
  margin-bottom:24px;
}
.detail-card h2 {
  margin:0 0 16px;
  font-size:28px;
  font-weight:800;
  color:var(--primary);
}
.detail-card p {
  margin:12px 0;
  font-size:18px;
  font-weight:600;
  color:var(--primary);
}
.detail-card strong {
  color:var(--muted);
  font-weight:700;
  margin-right:6px;
}
</style>
{% endblock %}

{% block body %}
<main class="burger-detail-wrap">
  <div class="detail-card">
    <h2>Détails du burger : {{ burger.name }}</h2>


    {% if burger.image is defined and burger.image is not empty %}
      <img src="{{ asset(burger.image.name) }}" alt="Image de {{ burger.name }}">
    {% else %}
      <img src="{{ asset('img/burger.webp') }}" alt="Image par défaut">
    {% endif %}

    {% if burger.price is defined %}
      <p><strong>Prix :</strong> {{ '%0.2f'|format(burger.price) }} €</p>
    {% endif %}
  </div>
</main>
{% endblock %}
